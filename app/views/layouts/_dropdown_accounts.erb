<div class="dropdown dropdown--accounts">
  <%= link_to image_tag(current_user.avatar_url(:image_72), alt: current_user.first_name), edit_user_path, class: 'dropdown__toggle' %>

  <div class="dropdown__content">
    <div class="dropdown__scroll-container">
      <div class="dropdown__arrow"></div>

      <ul class="dropdown__accounts-list">
        <li>
          <%= image_tag(current_user.avatar_url(:image_72), alt: current_user.first_name) %>

          <h3><%= current_user.first_name + ' ' + current_user.last_name %></h3>

          <%= link_to 'Account settings', edit_user_path %>
        </li>

        <li>
          <div></div>

          <h3>Have another account?</h3>

          <a href="#">Sign in</a>
        </li>
      </ul>
    </div>

    <div class="dropdown__footer">
      <a href="#" class="dropdown__expand">Accounts</a>

      <a href="#" class="button">Sign out</a>
    </div>
  </div>
</div>
