<main>
  <div class="card">
    <header>
      <h1>Space Email Invitations</h1>
    </header>

    <div class="card-content">
      <%= notice %>

      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @unused_space_email_invitations.each do |invitation| %>
            <tr>
              <td><%= invitation.email %></td>
              <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="card-actions">
        <%= link_to "Back to Members", space_members_path(@space) %>
      </div>
    </div>
  </div>
</main>
