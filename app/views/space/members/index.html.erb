<main>
  <div class="card">
    <header>
      <h1>Members</h1>
    </header>

    <div class="card-content">
      <%= notice %>


      <%= link_to "Make privat", space_access_control_path, method: :post %>
      <%= link_to "Make public", space_access_control_path, method: :delete %>

      <% if @space.access_control %>

      <%= render 'team_members', team_members: @space.team.members, space: @space %>

      <% end %>

      <%= link_to 'New Space', new_space_path, class: 'button button-primary' %>
    </div>
  </div>
</main>
