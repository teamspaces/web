      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @space.users.each do |space| %>
          <tr>
            <td><%= space.name %></td>
            <td><%= link_to 'View', space_pages_path(space) %></td>
            <td><%= link_to 'Edit', edit_space_path(space) %></td>
            <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
