<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.email %></td>
        <td><%= link_to 'Destroy', space_invitation_path(@space,invitation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
