<main>
  <div class="card">
    <header>
      <h1>Choose your team</h1>
    </header>

    <div class="card-content">

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><%= team.name %></td>
              <td><%= link_to 'Show', user_teams_funnel_access_team_path(team.subdomain) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="card-actions">
        <%= link_to "Create new team", user_teams_funnel_create_team_path %>
      </div>
    </div>
  </div>
</main>
