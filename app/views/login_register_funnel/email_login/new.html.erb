<main>
  <div class="card">
    <header>
      <h1><b>3/3</b> | Login with your email address</h1>
    </header>

    <div class="card-content">

      <p>Login with your email address: <b><%= @user.email %></b></p>

      <%= form_for(@user, url: email_login_path) do |f| %>

        <%= f.password_field :password, autocomplete: "off", placeholder: :password %>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation %>

        <%= submit_tag 'Login with my account' %>

      <% end %>

      <div class="card-actions">
        <%= link_to "Back", provide_email_address_path %>
      </div>
    </div>
  </div>
</main>
