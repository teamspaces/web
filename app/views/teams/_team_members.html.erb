<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% team_members.each do |member| %>
      <% user = member.user %>

      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= member.role %></td>
        <% if policy(member).destroy? %>
          <td><%= link_to "Remove", team_member_path(member), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
