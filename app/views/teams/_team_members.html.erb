<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% team_members.each do |member| %>
      <% user = member.user %>

      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= member.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
