<main>
  <div class="card">
    <header>
      <h1>Teams</h1>
    </header>

    <div class="card-content">
      <%= notice %>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><%= team.name %></td>
              <td><%= link_to 'Show', team_url(subdomain: team.subdomain) %></td>
              <td><%= link_to 'Edit', edit_team_url(subdomain: team.subdomain) %></td>
              <td><%= link_to 'Destroy', team_url(subdomain: team.subdomain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Team', new_team_path, class: 'button button-primary' %>
      <script type="text/javascript">
      throw new Error('broken');
      </script>
      <div class="card-actions">

      </div>
    </div>
  </div>
</main>
