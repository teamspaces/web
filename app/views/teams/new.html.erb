<main>
  <div class="card">
    <header>
      <h1>Create new team</h1>
    </header>

    <div class="card__content">

    <p>Account:</p>

      <ul class="dropdown__accounts-list">
        <li>
          <%= image_tag(@creation_user.avatar_url(:image_72), alt: @creation_user.first_name) %>

          <h3><%= @creation_user.name %></h3>
          <a><%= @creation_user.email %></a>
          <p><%= @creation_user.decorate.auth_method %>-User</p>
        </li>
      </ul>

      <%= link_to "Choose another account", new_team_user_path %>

      <hr>

      <p>Team</p>

      <%= render '/login_register_funnel/teams/form', team: @team_form, url: team_url(user_id: @creation_user.id) %>

      <div class="card__actions">
        <%= link_to "Back", root_subdomain_path %>
      </div>
    </div>
  </div>
</main>
