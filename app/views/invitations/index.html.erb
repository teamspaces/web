<main>
  <div class="card">
    <header>
      <h1>Invitations</h1>
    </header>

    <div class="card-content">
      <%= notice %>

      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @team.invitations.each do |invitation| %>
            <tr>
              <td><%= invitation.email %></td>
              <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= render 'form', invitation_form: @invitation_form %>

      <div class="card-actions">
        <%= link_to 'Back to Team', team_path %> |
        <%= link_to "Slack Button", user_slack_button_omniauth_authorize_url(subdomain: ENV["DEFAULT_SUBDOMAIN"], team_id: @team.id) %>
      </div>
    </div>
  </div>
</main>
