<h1 class="center">3/3</h1>

<p class="center"><img src="https://d30y9cdsu7xlg0.cloudfront.net/png/736563-200.png" width="80px" style="background-color:white" /></p>

<p class="center">Register with your email:</p>

<h1 class="center"><a><%= params[:email] %></a></h1>


<p class="center">Please choose a password:</p>


<%= form_tag(email_method_path, method: :get, class: "center") do %>


  <%= password_field_tag :password, nil, placeholder: "Password" %>

<p>Please confirm your password:</p>

  <%= password_field_tag :password_confirmation, nil, placeholder: "Password confirmation" %>

  <br>

  <%= submit_tag 'Create my account' %>


<% end %>


<br>
<br>
<div class="center">
  <i>You prefer to sign in with Slack?</i>
  <br>
    <%= link_to "Register with slack", user_slack_omniauth_authorize_url(subdomain: ENV["DEFAULT_SUBDOMAIN"], state: :register) %>

  <br>
  <br>

  <i>You already have an account?</i>
  <br>
  <%= link_to "Sign in with another Email", email_method_path %>
  <br>
  <%= link_to "Sign in with Slack", user_slack_omniauth_authorize_url(subdomain: ENV["DEFAULT_SUBDOMAIN"], state: :login) %>
</div>

<br>
<p class="center"><%= link_to "Back", email_method_path, style: "color:grey" %></p>
