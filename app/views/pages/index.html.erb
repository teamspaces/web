<% content_for :body_class, 'body-space' %>

<%= render 'sidebar', space: @space,
                      pages: @pages,
                      avatar_users: @space.avatar_users,
                      show_unseen: @space.number_of_unseen_avatars %>

<div class="space-page-container">
  <main class="space-page">
    <%= notice %>

    <h1><%= @space.name %></h1>

    <p>
      It's empty in here. Let's add some pages!
    </p>

    <%= link_to "Edit space", space_pages_path(@space, params: { page: { _: true }}), method: :post, class: 'button button-primary' %>
  </main>
</div>
