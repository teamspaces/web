<aside class="space-sidebar">
  <h3><%= link_to space.name, space_pages_path(space) %></h3>

<%= link_to(invitations_path, class: "avatars") do %>
  <% avatar_users.each do |user| %>
      <%= image_tag(user.avatar_url(:image_48), alt: user.name) %>
  <% end %>

  <% if show_unseen.positive? %>
      <span class="avatars-overflow">+<%= show_unseen %></span>
  <% end %>

  <span class="avatars-add"></span>
<% end %>

  <ul class="space-sidebar-pages">
    <% pages.each do |page| %>
      <% if current_page?(page) %>
        <li class="space-sidebar-active">
          <%= link_to page.title, page %>
        </li>
      <% else %>
        <li>
          <%= link_to page.title, page %>
        </li>
      <% end %>
    <% end %>
  </ul>
</aside>
