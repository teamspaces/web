<h1>Editing Page</h1>

<%= render 'form', page: @page %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', space_pages_path(@page.space) %>

<div id="page-editor"></div>

<script>
  $(function(){
    Spaces.Editor.init("#page-editor", {
      collab_url: "<%= ENV["COLLAB_SERVICE_URL"] %>?token=XYZ",
      collection: "collab_pages",
      document_id: "<%= @page.id %>"
    });
  });
</script>
