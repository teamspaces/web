<div class="avatars">
  <%= link_to(invitations_path, class: "avatars-inner") do %>
    <% avatar_users.each do |user| %>
    <%= image_tag(user.avatar_url(:image_48), alt: user.name) %>
    <% end %>

    <% if number_of_hidden_avatars.positive? %>
    <span class="avatars-overflow">+<%= number_of_hidden_avatars %></span>
    <% end %>

    <span class="avatars-add"></span>
  <% end %>
</div>
