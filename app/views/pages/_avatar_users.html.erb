<div class="avatars">
  <%= link_to(invitations_path, class: "avatars__inner") do %>
    <% avatar_users.each do |user| %>
    <%= image_tag(user.avatar_url(:image_48), alt: user.name) %>
    <% end %>

    <% if hidden_avatar_users.positive? %>
    <span class="avatars__overflow">+<%= hidden_avatar_users %></span>
    <% end %>

    <span class="avatars__add"></span>
  <% end %>
</div>
